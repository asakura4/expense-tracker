<div class="container">
    <h1 class="my-4" style="text-align: center">Register</h1>
    <div class="col-10 col-md-8 m-auto">
        <div class="card card-body">   
            {{> message}}        
            <form action="/users/register" method="POST">
                <div class="form-group my-2">
                    <label for="name">Name</label>
                    <input type="text" id="name" name="name" class="form-control" placeholder="Enter Name" value="{{name}}" required>
                </div>
                <div class="form-group my-2">
                    <label for="email">Email</label>
                    <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email" value="{{ email}}" required>
                </div>
                <div class="form-group my-2">
                    <label for="password">Password</label>
                    <input type="password" id="password" name="password" class="form-control" placeholder="Enter Password" value="{{ password }}" required>
                </div>
                <div class="form-group my-2">
                    <label for="password">Confirm Password</label>
                    <input type="password" id="confirmPassword" name="confirmPassword" class="form-control" placeholder="Confirm Password" value="{{ confirmPassword }}" required>
                </div>
                <div>
                    <button type="submit" class="btn btn-primary btn-block">Register</button>               
                    <a href="/auth/facebook" class="btn btn-info btn-block">Regiser by Facebook</a>
                </div>
            </form>
            <p class="lead my-4">
                Have An Account? <a href="/users/login">Login</a>
            </p>
        </div>
    </div>
</div>